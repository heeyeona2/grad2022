<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:text="ID"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <TextView android:layout_width="90dp"
            android:layout_height="45dp" android:layout_marginStart="16dp"
            android:text="Password" android:textSize="15sp"
            android:gravity="center"/>
        <TextView android:layout_width="90dp"
            android:layout_height="45dp" android:layout_marginStart="16dp"
            android:text="Age" android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="65dp" android:layout_marginStart="16dp"
            android:text="Gender" android:textSize="15sp"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent" android:orientation="vertical">
        <EditText android:id="@+id/id" android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:hint="id"/>

        <EditText android:id="@+id/pw"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:hint="password"
            android:inputType="numberPassword" />
        <EditText android:id="@+id/age"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:hint="age"
            android:inputType="numberDecimal" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/LoginradioGroup"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
            <RadioButton
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/male"
                android:layout_width="0dp"
                android:text="male"
                android:textAlignment="center"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/female"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="female"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"/>
                <RadioButton
                    android:id="@+id/trans"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="other"
                    android:button="@null"
                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"/>
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

